<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="@color/peach">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="215dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="25dp"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/black"
            app:boxCornerRadiusTopEnd="35dp"
            app:boxCornerRadiusBottomEnd="35dp"
            app:boxCornerRadiusTopStart="35dp"
            app:boxCornerRadiusBottomStart="35dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/enterEmailEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type Your Email" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="25dp"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/black"
            app:passwordToggleEnabled="true"
            app:boxCornerRadiusTopEnd="35dp"
            app:boxCornerRadiusBottomEnd="35dp"
            app:boxCornerRadiusTopStart="35dp"
            app:boxCornerRadiusBottomStart="35dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/enterPasswordEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type Your Password" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/confirmPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="25dp"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/black"
            app:passwordToggleEnabled="true"
            app:boxCornerRadiusTopEnd="35dp"
            app:boxCornerRadiusBottomEnd="35dp"
            app:boxCornerRadiusTopStart="35dp"
            app:boxCornerRadiusBottomStart="35dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/confirmPassEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Retype Your Password" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/signUpBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Sign Up" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Already registered?"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/moveToSignInEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:text=" Sign in."
                android:textColor="@color/bluish"
                android:textSize="17sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>